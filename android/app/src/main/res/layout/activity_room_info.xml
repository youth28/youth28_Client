<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RoomModifyActivity">

    <Button
        android:id="@+id/btnUpdateRoom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/btn_shape"
        android:text="update"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/appleneoeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peRson" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <TableRow>

            <CheckBox
                android:id="@+id/cbStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="7dp"
                android:text="스터디"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>

            <CheckBox
                android:id="@+id/cbWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업무"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/cbGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="게임"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>

            <CheckBox
                android:id="@+id/cbMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음악"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/cbArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="미술"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>

            <CheckBox
                android:id="@+id/cbExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동(헬스)"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>
        </TableRow>

        <TableRow>

            <CheckBox
                android:id="@+id/cbEtc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="19dp"
                android:clickable="false"
                android:fontFamily="@font/appleneom"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="30dp"
        android:text="방 제목"
        android:textSize="20dp"
        android:fontFamily="@font/appleneoeb"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="37dp" />

    <TextView
        android:id="@+id/tvRName"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_vertical"
        android:text="방제목"
        android:textColor="@color/black"
        android:fontFamily="@font/appleneom"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="Field"
        android:textSize="21dp"
        android:fontFamily="@font/appleneoeb"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        android:layout_marginLeft="37dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="인원설정"
        android:textSize="21dp"
        android:fontFamily="@font/appleneoeb"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        android:layout_marginLeft="37dp" />

    <TextView
        android:id="@+id/peRson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="1명"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:fontFamily="@font/appleneob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRName"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:srcCompat="@drawable/line" />

</androidx.constraintlayout.widget.ConstraintLayout>