<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.example.myapplication.ui.RoomMakeActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RoomMakeActivity">
    
        <Button
            android:id="@+id/btnMakeRoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/btn_shape"
            android:text="CREATE"
            android:onClick="@{activity::onCreateRoom}"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="@font/appleneoeb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peRson" />
    
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9">
    
            <TableRow>
    
                <CheckBox
                    android:id="@+id/cbStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:layout_marginBottom="7dp"
                    android:text="스터디"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
    
                <CheckBox
                    android:id="@+id/cbWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업무"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
            </TableRow>
    
            <TableRow>
    
                <CheckBox
                    android:id="@+id/cbGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="게임"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
    
                <CheckBox
                    android:id="@+id/cbMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="음악"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
            </TableRow>
    
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    
                <CheckBox
                    android:id="@+id/cbArt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="미술"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
    
                <CheckBox
                    android:id="@+id/cbExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동(헬스)"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
            </TableRow>
    
            <TableRow>
    
                <CheckBox
                    android:id="@+id/cbEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="기타"
                    android:textColor="#000000"
                    android:textSize="19dp"
                    android:fontFamily="@font/appleneom"/>
            </TableRow>
        </TableLayout>
    
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="30dp"
            android:text="방 제목"
            android:textSize="20dp"
            android:fontFamily="@font/appleneob"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="37dp" />
    
        <EditText
            android:id="@+id/editRname"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="37dp"
            android:background="@drawable/edit_text_shape"
            android:hint="방 제목을 입력하세요"
            android:text="@={activity.title}"
            android:fontFamily="@font/appleneom"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />
    
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="20dp"
            android:text="Field"
            android:textColor="#000000"
            android:textSize="21dp"
            android:fontFamily="@font/appleneob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:layout_marginLeft="37dp" />
    
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/appleneob"
            android:text="인원설정"
            android:textColor="#000000"
            android:textSize="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />
    
        <Button
            android:id="@+id/btnPlu"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/appleneoeb"
            android:text="+"
            android:textSize="30dp"
            android:onClick="@{activity::onPlu}"
            app:layout_constraintStart_toEndOf="@+id/peRson"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />
    
        <Button
            android:id="@+id/btnSub"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/appleneoeb"
            android:text="-"
            android:textSize="30dp"
            android:onClick="@{activity::onSub}"
            app:layout_constraintEnd_toStartOf="@+id/peRson"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />
    
        <TextView
            android:id="@+id/peRson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/appleneob"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@{activity.maxPeo}"
            tools:text="1"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />
    
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editRname"
            app:srcCompat="@drawable/line" />
    
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:srcCompat="@drawable/line" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>