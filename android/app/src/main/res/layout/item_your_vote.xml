<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="item"
            type="com.example.myapplication.dto.VoteDTO" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgChatYou"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChatYouName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/appleneom"
            android:text="문소빈"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgChatYou"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_you_image"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgChatYou"
            app:layout_constraintTop_toBottomOf="@+id/tvChatYouName">

            <TextView
                android:id="@+id/tvVoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-01-30"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/appleneom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvVoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/appleneom"
                android:text="오늘 운동하실 분~"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/tvVoteDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAgreeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 참여자: 문소빈 외 5명"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/appleneom"
                app:layout_constraintStart_toStartOf="@+id/tvVoteDate"
                app:layout_constraintTop_toBottomOf="@+id/tvVoteDate" />

            <Button
                android:id="@+id/btnVote"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_shape_white"
                android:fontFamily="@font/appleneom"
                android:gravity="center"
                android:text="투표 참여하기"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAgreeUser" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/appleneol"
            android:text="2021-01-20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgChatYou"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>